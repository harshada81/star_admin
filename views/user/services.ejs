<style>
    /* Background Styling */
    #services {
        background: linear-gradient(to right, #f9f9f9, #eef7ff);
        padding: 60px 0;
    }

    /* Grid Layout */
    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        text-align: center;
        max-width: 1000px;
        margin: 0 auto;
    }

    /* Service Items */
    .card {
        padding: 20px;
       
        background: white;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
        overflow: hidden;
        max-width: 320px;
        margin: auto;
        height: 100px;
    }

    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 25px rgba(0, 0, 0, 0.15);
    }

    /* Card Image */
    .card-img-top {
        width: 180px;
        height: 180px;
        border-radius: 50%;
        margin: 15px auto;
        transition: transform 0.3s ease;
        background-size: cover;
    }

    .card:hover .card-img-top {
        transform: scale(1.1);
    }

    /* Card Content */
    .card-body {
        text-align: center;
        padding: 15px;
    }

    .card-title {
        font-size: 18px;
        font-weight: bold;
        color:darkblue;
        margin-bottom: 10px;
    }

    .card-title::after {
        content: "";
        display: block;
        width: 50px;
        height: 3px;
        background-color: deeppink;
        margin: 5px auto 10px;
    }

    .card-text {
        font-size: 15px;
        color: #555;
    }

    .fw-bold {
        color: darkblue;
        font-weight: bold;
    }
    .services h2 ::after{
        content: "";
        display: block;
        width: 50px;
        height: 3px;
        background-color: deeppink;
        margin: 5px auto 10px; 

    }
    
    /* Dark Blue Heading */
    .text-primary {
        color: #004080 !important;
    }

    /* FAQ Button Styling */
    .accordion-button {
        background-color: #f8f9fa;
        font-weight: bold;
    }
    .accordion-button:not(.collapsed) {
        background-color: #004080 !important;
        color: white;
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
        .extra-features .row {
            flex-direction: column-reverse;
        }
    }
</style>

<!-- Include Bootstrap (optional for styling) -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<!-- Include AOS Library -->
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">

<!-- Services Section -->
<section id="services" class="services py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Our Services</h2>
            <p class="">We provide expert medical care for children with a compassionate approach.</p>
        </div>

        <div class="row">
            <% services.forEach(function(service, index) { %>
                <div class="col-md-4 col-sm-6 mb-4" data-aos="zoom-in" data-aos-delay="<%= index * 200 %>">
                    <div class="card h-100">
                        <img src="/admin_assets/<%= service.image1 %>" alt="<%= service.title1 %>" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title"><%= service.title1 %></h5>
                            <p class="card-text"><%= service.description1 %></p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-sm-6 mb-4" data-aos="zoom-in" data-aos-delay="<%= index * 400 %>">
                    <div class="card h-100">
                        <img src="/admin_assets/<%= service.image2 %>" alt="<%= service.title2 %>" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title"><%= service.title2 %></h5>
                            <p class="card-text"><%= service.description2 %></p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-sm-6 mb-4" data-aos="zoom-in" data-aos-delay="<%= index * 600 %>">
                    <div class="card h-100">
                        <img src="/admin_assets/<%= service.image3 %>" alt="<%= service.title3 %>" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title"><%= service.title3 %></h5>
                            <p class="card-text"><%= service.description3 %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>





<!-- Include JS libraries -->
