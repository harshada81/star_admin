<!-- Extra Features Section -->
<section class="extra-features py-5 ">
    <div class="container">
        <h2 class="section-title text-center text-primary fw-bold" data-aos="fade-up">Extra Features</h2>

        <div class="row align-items-center">
            <!-- FAQs Section -->
            <div class="col-md-12" data-aos="fade-right">
                <h3 class="sub-title  fw-bold">Frequently Asked Questions</h3>
                <div class="accordion" id="faqAccordion">
                    <% faqs.forEach(faqs => { %>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#faqs<%= faqs.id %>">
                                    <%= faqs.question %>
                                </button>
                            </h2>
                            <div id="faqs<%= faqs.id %>" class="accordion-collapse collapse">
                                <div class="accordion-body"><%= faqs.answer %></div>
                            </div>
                        </div>
                    <% }); %>
