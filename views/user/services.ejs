<!-- Ambulance Section -->
<section class="ambulance container my-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold">Ambulance Services</h2>
        <p class="text-dark">Emergency ambulance services available 24/7.</p>
    </div>
    <div class="row">
        <% ambulances.forEach(function(ambulance, index) { %>
            <div class="col-md-12 mb-4">
                <div class="row align-items-center shadow-sm p-3 rounded"
                     data-aos="<%= index % 2 === 0 ? 'fade-right' : 'fade-left' %>"
                     data-aos-delay="<%= index * 200 %>">
                     
                    <!-- Left Side: Image -->
                    <div class="col-md-5 text-center">
                        <img src="/admin_assets/<%= ambulance.image %>"
                             class="img-fluid rounded shadow"
                             alt="<%= ambulance.name %>"
                             style="max-height: 250px; object-fit: cover;">
                    </div>

                    <!-- Right Side: Information -->
                    <div class="col-md-7">
                        <div class="card-body">
                            <h5 class="card-title fw-bold " style="color: darkblue;"><%= ambulance.name %></h5>
                            <!-- <hr style="border: 2px solid deeppink; width: 50px;"> -->
                            <p class="card-text-dark"><strong style="color: deeppink;">ðŸ“ž Contact:</strong> <%= ambulance.contact_number %></p>
                            <p class="card-text-dark"><strong style="color: deeppink;">ðŸš‘ Service Type:</strong> <%= ambulance.service_type %></p>
                            <p class="card-text-dark"><%= ambulance.description %></p>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</section>

