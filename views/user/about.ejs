<%- include("navbar.ejs") %>

<!-- AOS CSS (for animations) -->
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">

<style>
    
   
.about-info h3{
        color:pink;
        margin-top: 30px;
      
        margin-top: 20px;
    }
    .hed::after {
    content: "";
    display: block;
    width: 60px;
    height: 4px;
    background: deeppink;
    margin: 10px auto 0;
}



.doctor-image {
    width: 50%; 
    padding-right: 20px; 
    margin-bottom: 30px;
}

.doctor-img {
    width: 400px;
    height:400px;
    border-radius: 8px;
    margin-left: 70px;
}

.doctor-details {
    width: 90%; 
    margin-left: 260px;
}



.section-description {
    font-size: 1.1rem;
    margin-top: 10px;

}
 .hed {
            color: darkblue;
            font-size: 2.1rem;
     }

       
        .about-info .hed {
            color: darkblue;
        }

      
        .doctor-section-about .hed {
            color: darkblue;
        }
        .doctor-details h3{
            color: deeppink;
        }
        .doctor-details strong{

            color: darkblue;
        }

    /* Responsive adjustments for small screens */
    @media (max-width: 768px) {
        .doctor-info {
            flex-direction: column;
            text-align: center;
        }
        
        .doctor-image {
            margin-bottom: 15px;
            margin-left: -360px;
        }
        
        .doctor-details {
            text-align: center;
            margin-left: 10px;
        }
        
        .doctor-details h3 {
            font-size: 1.1rem;
        }

        .doctor-details p {
            font-size: 0.95rem;
        }
    }

  
    @media (max-width: 480px) {
        .doctor-details h3 {
            font-size: 1rem;
        }

        .doctor-details p {
            font-size: 0.9rem;
        }

        .doctor-info {
            padding: 15px;
        }
    }


    /* vision.mission */


.row {
    display: flex;
    align-items: stretch; 
}


.mission-box, .vision-box {
    background: #fff;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    transition: all 0.4s ease-in-out;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: center; 
    height: 100px;
    margin-bottom: 40px;
    margin-top: 30px;
   
}


.mission-box, .vision-box {
    min-height: 250px;
}

.mission-box:hover, .vision-box:hover {
    transform: translateY(-5px);
    box-shadow: 0px 10px 25px rgba(0, 123, 255, 0.3);
}

@media (max-width: 768px) {
    .row {
        flex-direction: column;
    }
    .mission-box{
        min-height: auto; 
        margin-bottom: 20px;
    }
    .mission-box .section-subtitle{
        font-size: 30px;
        color: deeppink;
    }
    .vision-box .section-subtitle{
        font-size: 30px;
        color: deeppink;
    }
    .about-section h2{
        color: darkblue;
    }
     
}


.section-subtitle {
    font-size: 24px;
    font-weight: bold;
    color: deeppink; 
    margin-bottom: 15px;

}
</style>

<!-- About  Hospital Section -->
<section class="about-info">
    <div class="container">
        <div class="row">
          
            <div class="col-md-12 text-center mb-4" data-aos="fade-up"> 
             
                <% about_info.forEach(about_info => { %>
                    <h3 class="hed mt-5"><%= about_info.title %></h3>
                    <p><%= about_info.description %></p>
                <% }); %>
            </div>
        </div>
    </div>
</section>
<!-- Doctor Section -->
<section class="doctor-section-about">
    <div class="doc-sec">
        <h2 class="hed text-center" data-aos="fade-up">Meet Our Expert Doctors</h2>
        <p class="text-center section-description mt-2" data-aos="fade-up">
            Dedicated to providing the best pediatric care for your child.
        </p>
        <div class="container">
        <div class="row align-items-center">
         
            <% doctors.forEach(doctor => { %>
                <div class="col-md-6" data-aos="fade-up">
                    
                    <div class="doctor-info d-flex align-items-center">
                   
                        <div class="doctor-image col-md-6">
                            <img src="/admin_assets/<%= doctor.image %>" alt="<%= doctor.name %>" class="doctor-img">
                        </div>

                       
                        <div class="doctor-details col-md-6 ">
                            <h3><%= doctor.name %></h3>
                            <p><strong><%= doctor.title %></strong>  <%= doctor.experience %> </p>
                            <p><%= doctor.description %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    
    </div>
</section>



<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>

<script>
   
    AOS.init({
        duration: 1200, 
        easing: 'ease',
        once: true,
        mirror: false, 
    });
</script>



<section class="about-section">
    <div class="container">
        <div class="row">
            <% mission_vision.forEach(mission_vision => { %>
                <!-- Mission -->
                <% if (mission_vision.type === 'Mission') { %>
                    <div class="col-md-6 text-center" data-aos="fade-left">
                        <div class="mission-box">
                            <h3 class="section-subtitle">Our Mission</h3>
                            <p><%= mission_vision.description %></p>
                        </div>
                    </div>
                <% } %>

                <!-- Vision -->
                <% if (mission_vision.type === 'Vision') { %>
                    <div class="col-md-6 text-center" data-aos="fade-right">
                        <div class="vision-box">
                            <h3 class="section-subtitle">Our Vision</h3>
                            <p><%= mission_vision.description %></p>
                        </div>
                    </div>
                <% } %>
            <% }); %>
        </div>
    </div>
</section>

<%- include("footer.ejs") %>
