<style>
/* Articles Section */
.articles-section {
    padding: 50px 20px;
    text-align: center;
}

.articles-section h2 {
    font-size:34px;
    color: #1b1b6d;
    
    
   
}

.article-card {
    background: white;
    width: 100%;
    max-width: 350px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    overflow: hidden;
    transition: transform 0.3s ease-in-out;
    position: relative;
    border-bottom-right-radius: 60px;
    border-top-left-radius: 60px;
    margin-top: 30px;
}

.article-card:hover {
    transform: scale(1.05);
}

.article-img {
    width: 100%;
    height: 200px;
    object-fit: cover;
}

.article-content {
    padding: 20px;
}

.article-category {
    font-size: 0.9rem;
    font-weight: bold;
    color: #ff4081;
    text-transform: uppercase;
}

.article-date {
    font-size: 0.8rem;
    color: #666;
    margin: 5px 0;
}

.article-title {
    font-size: 1.2rem;
    font-weight: bold;
    color: #1b1b6d;
    margin-bottom: 10px;
}

.read-more {
    display: inline-block;
    padding: 8px 12px;
    background-color: #1b1b6d;
    color: white;
    font-size: 0.9rem;
    text-decoration: none;
    border-radius: 5px;
    transition: 0.3s;
}

.read-more:hover {
    background-color: #ff4081;
}
</style>

<!-- ðŸŸ¢ Articles Section with AOS Animations -->
<section class="articles-section py-5">
    <div class="container">
        <h2 class="text-center mb-4" data-aos="fade-up">Latest Blogs & Articles</h2>
        <div class="row justify-content-center">
            <% articles.forEach((article, index) => { %>
                <div class="col-md-4 d-flex justify-content-center mb-4" data-aos="fade-up" data-aos-delay="<%= index * 150 %>">
                    <div class="article-card shadow">
                        <img src="/admin_assets/<%= article.image %>" alt="<%= article.title %>" class="article-img">
                        <div class="article-content">
                            <p class="article-category"><%= article.category %></p>
                            <p class="article-date"><%= article.date %></p>
                            <h3 class="article-title"><%= article.title %></h3>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
       
    </div>
</section>

<script>
    AOS.init({
        duration: 800,
        easing: "ease-in-out",
        once: true
    });
</script>



