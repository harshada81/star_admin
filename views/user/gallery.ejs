<%- include("navbar.ejs") %>

<!-- Gallery Section -->
<section class="gallery">
    <div class="container">
        <h2 class="text-center">Our Gallery</h2>
        <div class="row">
            <% gallery.forEach(item => { %>
                <div class="col-md-4 col-sm-6 gallery-item" data-aos="fade-up" data-aos-duration="1000">
                    <div class="gallery-image-wrapper">
                        <img src="/admin_assets/<%= item.image %>" alt="Gallery Image" class="img-fluid">
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>



<!-- AOS Library -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
<script>
    AOS.init();
</script>

<!-- CSS for Styling -->
<style>
    .gallery {
        padding: 50px 0;
        background-color: #f8f9fa; /* Light background */
    }

    .gallery h2 {
        font-size: 2rem;
        margin-bottom: 30px;
        font-weight: bold;
        color: darkblue;
    }

    .gallery-item {
        margin-bottom: 20px;
    }

    .gallery-image-wrapper {
        width: 100%;
        height: 250px; /* Fixed height for consistency */
        overflow: hidden;
        border-radius: 10px; /* Rounded corners */
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .gallery-image-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Ensures all images fit properly */
        transition: transform 0.3s ease-in-out;
    }

    .gallery-image-wrapper img:hover {
        transform: scale(1.05);
    }
</style>
