                    <div class="doctor-card p-3 border rounded shadow mb-3" data-aos="fade-left" data-aos-duration="1000">
                        <div class="row align-items-center">
                            <div class="col-md-4 text-center">
                                <img src="/admin_assets/<%= specialist.image %>" alt="<%= specialist.name %>" class="doctor-img img-fluid rounded-circle">
                            </div>
                            <div class="col-md-8">
                                <h4 class="doctor-name mb-1"><%= specialist.name %></h4>
                                <p class="doctor-specialty text-muted"><%= specialist.specialty %></p>
                                <p class="doctor-qualification"><%= specialist.qualification %></p>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                <% } else { %>
                    <p class="text-center text-muted">No specialists available at the moment.</p>
                <% } %>
            </div>
        </div>
    </div>
</section>



