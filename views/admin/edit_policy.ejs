<div class="container my-5">
    <h2>Edit Policy</h2>

    <!-- âœ… Edit Policy Form -->
    <form class="card p-4 shadow" action="/admin/update_policy/<%= policy.id %>" method="POST">
        <div class="mb-3">
            <label class="form-label">Policy Title:</label>
            <input type="text" name="title" class="form-control" value="<%= policy.title %>" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Policy Description:</label>
            <textarea name="description" class="form-control" rows="4" required><%= policy.description %></textarea>
        </div>

        <button type="submit" class="btn btn-success">Update Policy</button>
        <a href="/admin/policies" class="btn btn-secondary">Cancel</a>
    </form>
</div>

