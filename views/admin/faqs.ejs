<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage FAQs</title>
    <link rel="stylesheet" href="/admin_assets/css/bootstrap.min.css"> 
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Manage FAQs</h2>

        <!-- ðŸ“Œ FAQ Form -->
        <form action="/admin/save_faq" method="POST" class="mb-4 p-4 border rounded">
            <h4>Add New FAQ</h4>
            <div class="mb-3">
                <label for="question" class="form-label">Question</label>
                <input type="text" class="form-control" id="question" name="question" required>
            </div>
            <div class="mb-3">
                <label for="answer" class="form-label">Answer</label>
                <textarea class="form-control" id="answer" name="answer" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Add FAQ</button>
        </form>

        <!-- ðŸ“Œ FAQ List -->
        <h4>All FAQs</h4>
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Question</th>
                    <th>Answer</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% faqs.forEach(faq => { %>
                <tr>
                    <td><%= faq.id %></td>
                    <td><%= faq.question %></td>
                    <td><%= faq.answer %></td>
                    <td>
                        <a href="/admin/edit_faq/<%= faq.id %>" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/admin/delete_faq/<%= faq.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>

