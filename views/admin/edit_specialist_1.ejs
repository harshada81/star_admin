<%- include("navbar.ejs") %>

<div class="container mt-5">
    <h2 class="text-center">Edit Specialist</h2>
    <form action="/admin/update_specialist_1/<%= specialist.id %>" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" name="name" class="form-control" value="<%= specialist.name %>" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Specialization</label>
            <input type="text" name="specialization" class="form-control" value="<%= specialist.specialization %>" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea name="description" class="form-control" required><%= specialist.description %></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Current Image</label><br>
            <% if (specialist.image) { %>
                <img src="/admin_assets/<%= specialist.image %>" width="100">
            <% } else { %>
                No Image
            <% } %>
        </div>
        <div class="mb-3">
            <label class="form-label">Upload New Image (Optional)</label>
            <input type="file" name="image" class="form-control">
            <input type="hidden" name="old_image" value="<%= specialist.image %>">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a href="/admin/specialists_org" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<%- include("footer.ejs") %>
